# Supabase Configuration (Database only - NOT auth)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Cloudinary Configuration (Image upload - FREE tier)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset-name
NEXT_PUBLIC_CLOUDINARY_FOLDER=toilet-inspections

# JWT Secret (GENERATE A STRONG SECRET!)
# Run: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=WC Check System

# Cookie Configuration
COOKIE_MAX_AGE=604800
# 7 days in seconds = 7 * 24 * 60 * 60 = 604800
